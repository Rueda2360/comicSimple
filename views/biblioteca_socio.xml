<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Definición de la vista Tree para la lista de socios -->
    <record id="biblioteca_socio_view_tree" model="ir.ui.view">
        <field name="name">Lista de Socios</field>
        <field name="model">biblioteca.socio</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="apellido"/>
                <field name="identificador"/>
            </tree>
        </field>
    </record>

    <!-- Definición de la acción para abrir la vista Tree de socios -->
    <record id='biblioteca_socio_list_action' model='ir.actions.act_window'>
        <field name="name">Lista de Socios</field>
        <field name="res_model">biblioteca.socio</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
